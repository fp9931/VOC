def autocorrelation(x):
    n = len(x)
    variance = np.var(x)
    mean = np.mean(x)
    x = x - mean
    r = np.correlate(x, x, mode='full')[-n:]
    result = r / (variance * (np.arange(n, 0, -1)))
    return result

